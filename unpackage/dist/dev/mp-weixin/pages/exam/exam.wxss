}
.remake-btn {
	text-align: center;
	background-image: -webkit-linear-gradient(left, #03a9f4, #f441a5, #ffeb3b, #03a9f4);
	background-image: linear-gradient(90deg, #03a9f4, #f441a5, #ffeb3b, #03a9f4);
	background-size: 400%;
	-webkit-animation: show 24s linear infinite;
	        animation: show 24s linear infinite;
	width: 140px;
	height: 40px;
	border-radius: 40px;
	padding: 0;
	margin: 0 auto;
	font-size: 20px;
	color: black;
	line-height: 40px;
	/* font-weight: 100; */
	box-shadow: 4px 5px 10px rgba(197, 197, 197, 0.8);
}
.remake-btn:nth-child(2) {
	color: white;
	font-weight: 600;
	background-image: -webkit-linear-gradient(left, #30b57b, #5185bc, #2778a2, #30b59b);
	background-image: linear-gradient(90deg, #30b57b, #5185bc, #2778a2, #30b59b);
	-webkit-animation: show 24s linear infinite;
	        animation: show 24s linear infinite;
}
.bot-botton {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
@-webkit-keyframes show {
0% {
		background-position: 0%;
}
100% {
		background-position: 400%;
}
}
@keyframes show {
0% {
		background-position: 0%;
}
100% {
		background-position: 400%;
}
}

